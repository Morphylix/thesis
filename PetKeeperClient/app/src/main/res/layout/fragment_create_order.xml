<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/new_order_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:paddingBottom="16dp"
            android:text="@string/new_order"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/general_information_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/general_information"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/new_order_text_view" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/create_order_divider1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@id/general_information_text_view" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pet_name_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:hint="@string/pet_name_hint"
            app:layout_constraintTop_toBottomOf="@id/create_order_divider1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pet_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/pet_type_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pet_type_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/pet_type_spinner"
            app:layout_constraintBottom_toBottomOf="@id/pet_type_spinner"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/pet_type_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:entries="@array/pet_type_array"
            android:focusable="true"
            android:minHeight="48dp"
            android:spinnerMode="dropdown"
            app:layout_constraintStart_toEndOf="@id/pet_type_text_view"
            app:layout_constraintTop_toBottomOf="@id/pet_name_input_layout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pet_breed_input_layout"
            style="@style/ThemeOverlay.Material3.AutoCompleteTextView.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/pet_type_spinner"
            app:queryHint="Pet breed">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/pet_breed_edit_text"
                android:layout_width="match_parent"
                android:padding="16dp"
                android:layout_height="match_parent"
                android:hint="@string/pet_breed_hint" />

        </com.google.android.material.textfield.TextInputLayout>

        <RadioGroup
            android:id="@+id/pet_gender_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/pet_breed_input_layout">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/male" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/female" />
        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pet_years_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:layout_constraintEnd_toStartOf="@id/pet_months_input_layout"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pet_gender_radio_group">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pet_years_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/years_hint" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pet_months_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/pet_years_input_layout"
            app:layout_constraintTop_toBottomOf="@id/pet_gender_radio_group">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pet_months_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/months_hint" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pet_weight_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pet_years_input_layout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pet_weight_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/weight_hint" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/pet_picture_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pet_picture"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pet_weight_input_layout"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/pet_picture_image_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pet_picture_text_view"
            android:src="@drawable/round_add_black_24dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/pet_character_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pet_picture_image_view"
            android:text="@string/pet_character"/>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/create_order_divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/pet_character_text_view"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/pet_friendliness_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/create_order_divider2"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/is_your_pet_friendly" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/other_people_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/other_people_radio_group"
            app:layout_constraintTop_toTopOf="@id/other_people_radio_group"
            android:text="@string/to_other_people"/>

        <RadioGroup
            android:id="@+id/other_people_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/other_people_text_view"
            app:layout_constraintTop_toBottomOf="@id/pet_friendliness_text_view"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/don_t_know"/>

        </RadioGroup>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/children_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/children_radio_group"
            app:layout_constraintTop_toTopOf="@id/children_radio_group"
            android:text="@string/to_children"/>

        <RadioGroup
            android:id="@+id/children_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/children_text_view"
            app:layout_constraintTop_toBottomOf="@id/other_people_text_view"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/don_t_know"/>

        </RadioGroup>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/cats_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/cats_radio_group"
            app:layout_constraintTop_toTopOf="@id/cats_radio_group"
            android:text="@string/to_cats"/>

        <RadioGroup
