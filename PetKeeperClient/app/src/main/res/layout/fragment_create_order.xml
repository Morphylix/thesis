            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/cats_text_view"
            app:layout_constraintTop_toBottomOf="@id/children_text_view"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/don_t_know"/>

        </RadioGroup>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dogs_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/dogs_radio_group"
            app:layout_constraintTop_toTopOf="@id/dogs_radio_group"
            android:text="@string/to_dogs"/>

        <RadioGroup
            android:id="@+id/dogs_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/dogs_text_view"
            app:layout_constraintTop_toBottomOf="@id/cats_text_view"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/don_t_know"/>

        </RadioGroup>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/other_animals_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/other_animals_radio_group"
            app:layout_constraintTop_toTopOf="@id/other_animals_radio_group"
            android:text="@string/to_other_animals"/>

        <RadioGroup
            android:id="@+id/other_animals_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/other_animals_text_view"
            app:layout_constraintTop_toBottomOf="@id/dogs_text_view"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/don_t_know"/>

        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/what_animals_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/other_animals_radio_group"
            android:hint="@string/what_animals_hint"
            android:visibility="gone"
            android:layout_margin="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/what_pets_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/what_animals_input_layout"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/what_pets_can_live_with_your_pet"/>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/dogs_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/what_pets_text_view"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/dogs"/>

        <RadioGroup
            android:id="@+id/dogs_gender_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dogs_checkbox"
            android:orientation="horizontal"
            android:visibility="gone">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/male"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/female"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/any"/>

        </RadioGroup>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cats_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/dogs_gender_radio_group"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/cats"/>

        <RadioGroup
            android:id="@+id/cats_gender_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cats_checkbox"
            android:orientation="horizontal"
            android:visibility="gone">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/male"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/female"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/any"/>

        </RadioGroup>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/other_animals_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cats_gender_radio_group"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/other_animals"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/other_animals_gender_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/other_animals_checkbox"
            android:visibility="gone"
            android:layout_margin="4dp"
            android:hint="@string/what_animals_and_gender_hint">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/litter_box_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/other_animals_gender_input_layout"
            app:layout_constraintBottom_toBottomOf="@id/litter_box_radio_group"
            android:text="@string/is_your_pet_litter_box_trained"/>

        <RadioGroup
            android:id="@+id/litter_box_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/litter_box_text_view"
            app:layout_constraintTop_toBottomOf="@id/other_animals_gender_input_layout"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"/>

        </RadioGroup>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mark_things_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/litter_box_radio_group"
            app:layout_constraintBottom_toBottomOf="@id/mark_things_radio_group"
            android:text="@string/does_your_pet_mark_things"/>

        <RadioGroup
            android:id="@+id/mark_things_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/mark_things_text_view"
            app:layout_constraintTop_toBottomOf="@id/litter_box_radio_group"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"/>

        </RadioGroup>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/chew_things_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mark_things_radio_group"
            app:layout_constraintBottom_toBottomOf="@id/chew_things_radio_group"
            android:text="@string/does_your_pet_chew_things"/>

        <RadioGroup
            android:id="@+id/chew_things_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/chew_things_text_view"
            app:layout_constraintTop_toBottomOf="@id/mark_things_radio_group"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"/>

        </RadioGroup>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/medical_info_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chew_things_radio_group"
            android:text="@string/medical_information"/>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/create_order_divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/medical_info_text_view"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/is_vaccinated_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/is_your_pet_vaccinated"
            app:layout_constraintTop_toBottomOf="@id/create_order_divider3"
            app:layout_constraintBottom_toBottomOf="@id/is_vaccinated_radio_group"
            app:layout_constraintStart_toStartOf="parent"/>

        <RadioGroup
            android:id="@+id/is_vaccinated_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/is_vaccinated_text_view"
            app:layout_constraintTop_toBottomOf="@id/create_order_divider3"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
